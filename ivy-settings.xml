<ivysettings>
    <settings defaultResolver="main"/>

    <resolvers>
        <chain name="main" dual="true">
            <filesystem name="local" m2compatible="true">
                <ivy pattern="${user.home}/.ivy/repo/[organization]/[module]/[revision]/ivy-[revision].[ext]"/>
                <artifact pattern="${user.home}/.ivy/repo/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
            </filesystem>

            <url name="movealong-private" m2compatible="true">
                <ivy pattern="http://ivy.vpn.movealong.org/[organization]/[module]/[revision]/ivy-[revision].[ext]"/>
                <artifact pattern="http://ivy.vpn.movealong.org/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
            </url>

            <url name="movealong-local" m2compatible="true">
                <ivy pattern="http://ivy.movealong.org/[organization]/[module]/[revision]/ivy-[revision].[ext]"/>
                <artifact pattern="http://ivy.movealong.org/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
            </url>

            <ibiblio name="m2" m2compatible="true"/>
            
            <url name="neuri" m2compatible="true">
                <artifact pattern="http://maven.neuri.com/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
            </url>
        </chain>

        <ssh name="dorothy-public" user="hudson" host="dorothy.movealong.org" keyFile="${user.home}/.ssh/id_ivy" m2compatible="true" publishPermissions="0644">
            <ivy pattern="/var/www/ivy.movealong.org/[organization]/[module]/[revision]/ivy-[revision].[ext]"/>
            <artifact pattern="/var/www/ivy.movealong.org/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
        </ssh>

        <ssh name="dorothy-private" user="hudson" host="dorothy.movealong.org" keyFile="${user.home}/.ssh/id_ivy" m2compatible="true" publishPermissions="0644">
            <ivy pattern="/var/www/ivy.vpn.movealong.org/[organization]/[module]/[revision]/ivy-[revision].[ext]"/>
            <artifact pattern="/var/www/ivy.vpn.movealong.org/[organization]/[module]/[revision]/[artifact]-[revision].[ext]"/>
        </ssh>
    </resolvers>
</ivysettings>
